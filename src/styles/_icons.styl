@font-face
    font-family 'syrusakbary'
    src url(STATIC_URL+'fonts/syrusakbary.eot');
    src url(STATIC_URL+'fonts/syrusakbary.eot?#iefix') format('embedded-opentype'), \
        url(STATIC_URL+'fonts/syrusakbary.woff') format('woff'), \
        url(STATIC_URL+'fonts/syrusakbary.ttf') format('truetype'), \
        url(STATIC_URL+'fonts/syrusakbary.svg#syrusakbary') format('svg')
    font-weight normal
    font-style normal

$icon
    font-family: 'syrusakbary'
    speak: none
    font-style: normal
    font-weight: normal
    font-variant: normal
    text-transform: none
    line-height: 1
    -webkit-font-smoothing: antialiased

icon(letter, $type=':before')
    &{$type}
        @extends $icon
        content: letter
        {block}

$icon_abs
    position relative
    text-indent -10000px
    overflow hidden

$inner_icon_abs
    position absolute
    left 0
    top 0
    right 0
    bottom 0
    text-indent 0
    display inline-block

abs_icon(letter, $type=':before')
    @extends $icon_abs
    &{$type}
        @extends $inner_icon_abs
    +icon(letter, $type)
        
        {block}
