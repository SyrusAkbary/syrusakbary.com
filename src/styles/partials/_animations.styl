// MENU

$top = 22px
$middle = 14px
$bottom = 6px
@keyframes menuInBottom
    0%
        top $top
    40%
        // top $middle
        transform translateY(-1 * $top + $middle) rotate(0deg)
    100%
        // top $middle
        transform translateY(-1 * $top + $middle) rotate(135deg)

@keyframes menuOutBottom
    0%
        top $top
    40%
        // top $middle
        transform translateY(-1 * $top + $middle) rotate(0deg)
    100%
        // top $middle
        transform translateY(-1 * $top + $middle) rotate(135deg)

@keyframes menuInTop
    0%
        top $bottom
    40%
        // top $middle
        transform translateY(-1 * $bottom  + $middle) rotate(0deg)
    100%
        // top $middle
        transform translateY(-1 * $bottom  + $middle) rotate(135deg)

@keyframes menuOutTop
    0%
        top $bottom
    40%
        // top $middle
        transform translateY(-1 * $bottom  + $middle) rotate(0deg)
    100%
        // top $middle
        transform translateY(-1 * $bottom  + $middle) rotate(135deg)

@keyframes menuInMiddle
    40%
        transform rotate(0deg)
    100%
        transform rotate(45deg)

@keyframes menuOutMiddle
    40%
        transform rotate(0deg)
    100%
        transform rotate(45deg)


parseInta($x)
  $s = $x[0]
  return parseInt($s)
animate($type, $duration, $delay=false, $timing=false, $fill=both, $direction=false)
  // animation $type
  // animation-duration $duration
  // if $timing
  //   animation-timing-function $timing
  if $timing
    animation $type $duration $timing
  else
    animation $type $duration

  if $fill
    animation-fill-mode $fill
  if $delay
    animation-delay $delay
    .page-turbolinks &
      $x = $delay + .35s
      animation-delay $x
  if $direction
    animation-direction $direction
