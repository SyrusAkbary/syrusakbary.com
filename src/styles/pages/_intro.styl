#intro
    @extends $padder
    padding-top 76px
    padding-bottom 63px
    position relative
    overflow hidden
    text-align center

#intro__background
    position absolute
    top 0px
    bottom 0px
    right 0px
    left 0px
    background #4c3874 url(STATIC_URL+'images/main_background.png') no-repeat center center
    background-size cover
    z-index 0
    // animate(backgroundAppear, .3s, null, ease-in-out)

#intro__avatar
    margin 0 auto
    display block
    margin-top 84px
    width 115px
    height @width
    border-radius 100%
    border 4px solid white
    box-shadow 0 2px 4px rgba(0,0,0,.3)
    animate(bounceIn, 1.1s, .5s)
    +media('lap+')
        position absolute
        top 50%
        left 23px
        width 85px
        height 85px
        border 3px solid white
        margin-top -47px
        animate(bounceIn, 1.1s, .5s)
#intro__description
    margin 0 auto
    margin-top 40px
    font-family $body-font
    font-weight 300
    font-size 17px
    color #FFFFFF
    line-height 28px
    max-width 540px
    letter-spacing .2px
    display block
    animate(fadeInDown, .8s, .9s)
    strong
        font-weight 500
    +media('lap+')
        margin-top 48px
        margin-left 110px
        margin-right -10px
        text-align left
        font-size 15px
        line-height 26px
        // animate(fadeInLeft, .8s, .9s)
        animation-name fadeInLeft
        // font-weight 400

#intro__profile-link
    button_white()
    margin-top 38px
    display inline-block
    animate(fadeInDown, .8s, 1.3s)
    +media('lap+')
        display block
        float left
        margin-left 110px
        margin-top 24px
        animation-name fadeInLeft


#social
    background white
    padding 84px 0
    text-align center
    +media('lap+')
        padding 50px 0 80px

#social__links
    position relative
    display inline-block

#social__guide
    position absolute
    right 100%
    top 100%
    font-family $comic-font
    font-size 17px
    white-space nowrap
    text-transform lowercase
    color #B9B7B7
    margin-right 5px
    margin-top 25px
    &:before
        content ''
        left 50%
        bottom 100%
        width 70px
        height 42px
        margin-bottom 10px
        background url(STATIC_URL+'/images/arrow-tr.svg') no-repeat center center
        display block
        position absolute
    +media('lap+')
        left 50%
        margin-left -50px
        width 100px
        margin-top 15px
        right auto
        &:before
            right 100%
            left auto
            bottom 0
            margin-bottom -10px
            margin-right -10px
            transform rotate(230deg) scale(.5)

$social_link
    width 48px
    height 48px
    display inline-block
    // overflow hidden
    // background-position center center
    // background-repeat no-repeat
    // background-size contain
    vertical-align top
    // text-indent -10000px
    margin 0 30px
    +media('lap+')
        width 38px
        height 38px
        font-size 38px
        margin 0 11px
    // &:hover
    //     transform scale(1.2)
    color #D6D9DC
    // overflow hidden
    &:hover
        &:before
            transform translateY(-100%)
            // transition all .2s ease-in-out
            // transform scale(0)
            // opacity 0
            // transition-delay .0s
        &:after
            transform translateY(0)
            // transition all .2s ease-in-out
            // transform scale(1)
            // opacity 1
            // transition-delay .06s
    // &:before
    //     transition-delay .06s
    &:before
    &:after
        // transform-origin 0 100%
        transition all .2s ease-in-out
    &:after
        transform translateY(100%)
    // &:after
    //     opacity 0
    //     transition all .2s ease-in-out
    //     transform scale(0)

$base_icon
    font-size 48px
    text-align center
    height 48px
    line-height 48px
    +media('lap+')
        font-size 38px
        height 38px

social_icon($content, $color)
    @extends $social_link
    +abs_icon($content)
        @extends $base_icon
    +abs_icon($content, ':after')
        @extends $base_icon
        top 0
        bottom auto
        color $color

#social__github
    social_icon("\e605", #333)

#social__twitter
    social_icon("\e603", #55ACEE)

#social__linkedin
    social_icon("\e604", #0976b4)

#social__facebook
    social_icon("\e602", #3b5998)

#social__instagram
    social_icon("\e607", #3f729b)
