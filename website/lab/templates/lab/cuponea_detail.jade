html(xmlns="http://www.w3.org/1999/xhtml" lang="{{ LANGUAGE_CODE }}" xmlns:fb="http://ogp.me/ns/fb#")
    head
        - block head
            title Cuponea - Syrus Akbary
            meta(property="og:site_name" content="Syrus Akbary")
            meta(property="og:image" content='{{ media_url("images/logo128-black.png") }}')
            block styles
                - include_media "lab/cuponea/css/main.css"
            //[if IE 8] - include_media "css/ie.css"
            link(rel="shortcut icon" href='{{ media_url("images/favicon.png") }}')
    
    body(class='{{body_class}}')
        .cloud(class="{{'reversed' if back else ''}}")
            .front: if not back
                = cupon
            .back
                if back
                    = cupon
            .share
                | <fb:like send="true" width="450" show_faces="true"></fb:like>            
            a.go_front(href="{{request_path}}") Volver
        .sunrays
        footer
            | Si te ha gustado
            a(href="http://twitter.com/syrusakbary") sígueme en twitter
            | o compártelo
      - block scripts
        script(type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js")
        script
            $(document).ready(function onReady() {
                submit_button = $('.go_back').click(function onBackClick() {
                    _ = $(this);
                    _.addClass('disabled')
                });
                $('.go_front').live('click',function onFrontlick() {
                    _ = $(this);
                    _.parents().filter('.cloud').removeClass('reversed');
                    return false;
                });
                $('form').submit(function onSubmitForm(){
                    _ = $(this);
                    if (submit_button.not('.disabled')) $.post(_.attr('action'), _.serialize(), function(data) {
                        submit_button.removeClass('disabled')
                        p = _.parents();
                        if (data.back) {
                            back = p.filter('.cloud').addClass('reversed').find('>.back');
                            back.html(data.cupon);
                        }
                        else p.filter('.cloud').removeClass('reversed');
                        
                    });
                    return false;

                });
            });
        script
